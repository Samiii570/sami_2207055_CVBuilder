<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cvbuilder.controller.HomeController">

    <top>
        <VBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="10" left="20"/>
            </padding>
            <Label text="CV Builder Application" style="-fx-text-fill: #2a4d69; -fx-font-size: 26px; -fx-font-weight: bold;"/>
            <Label text="Welcome to CV Builder!"
                   style="-fx-text-fill: #4b86b4; -fx-font-size: 16px;"/>
        </VBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>



            <Button text="Create New CV" onAction="#goToForm"
                    style="-fx-background-color: #4b86b4; -fx-text-fill: white; -fx-padding: 10 20; -fx-font-size: 14px; -fx-background-radius: 8;"/>
        </VBox>
    </center>

</BorderPane>
