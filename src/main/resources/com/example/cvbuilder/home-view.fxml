<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>

<BorderPane fx:controller="com.example.cvbuilder.controller.HomeController"
            xmlns:fx="http://javafx.com/fxml"
            style="-fx-background-color: linear-gradient(to bottom, #2a4d69, #4b86b4);">

    <center>
        <VBox spacing="20" alignment="CENTER">

            <Label text="Welcome to CV Builder"
                   style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: white;
                          -fx-effect: dropshadow(gaussian, black, 3, 0.3, 0, 1);"/>

            <Button text="Start Building"
                    onAction="#goToForm"
                    style="-fx-background-color: white; -fx-text-fill: #2a4d69;
                           -fx-font-weight: bold; -fx-font-size: 16px;
                           -fx-padding: 12 30; -fx-background-radius: 12;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 5, 0.2, 0, 1);"/>
        </VBox>
    </center>

</BorderPane>
