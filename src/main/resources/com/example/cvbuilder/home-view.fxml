<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cvbuilder.controller.HomeController">

    <top>
        <Label text="CV Builder Application" styleClass="header"/>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Create and preview your professional CV!" styleClass="subtitle"/>
            <Button text="Create New CV" onAction="#goToForm" styleClass="main-button"/>
        </VBox>
    </center>

</BorderPane>
