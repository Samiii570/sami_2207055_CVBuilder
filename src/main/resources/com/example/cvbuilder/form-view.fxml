<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.cvbuilder.controller.FormController"
            style="-fx-background-color: #cfe0e8;">

    <top>
        <Label text="Enter Your Details"
               style="-fx-text-fill: #2a4d69; -fx-font-size: 26px; -fx-font-weight: bold;
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 3, 0.3, 0, 1);
                      -fx-padding: 10;"/>
    </top>

    <center>
        <GridPane hgap="14" vgap="14">
            <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>




            <Label text="Full Name:" style="-fx-text-fill: #2a4d69; -fx-font-weight: bold;"
                   GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="fullNameField"
                       style="-fx-background-color: #f7fbfc; -fx-background-radius: 8;
                              -fx-padding: 8; -fx-font-weight: bold;"
                       prefWidth="400"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Email:" style="-fx-text-fill: #2a4d69; -fx-font-weight: bold;"
                   GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField"
                       style="-fx-background-color: #f7fbfc; -fx-background-radius: 8;
                              -fx-padding: 8; -fx-font-weight: bold;"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Phone:" style="-fx-text-fill: #2a4d69; -fx-font-weight: bold;"
                   GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="phoneField"
                       style="-fx-background-color: #f7fbfc; -fx-background-radius: 8;
                              -fx-padding: 8; -fx-font-weight: bold;"
                       GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Address:" style="-fx-text-fill: #2a4d69; -fx-font-weight: bold;"
                   GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="addressField"
                       style="-fx-background-color: #f7fbfc; -fx-background-radius: 8;
                              -fx-padding: 8; -fx-font-weight: bold;"
                       GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Education:" style="-fx-text-fill: #2a4d69; -fx-font-weight: bold;"
                   GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextArea fx:id="educationField"
                      style="-fx-background-color: #f7fbfc; -fx-background-radius: 8;
                              -fx-padding: 8; -fx-font-weight: bold;"
                      prefRowCount="3"
                      GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Skills:" style="-fx-text-fill: #2a4d69; -fx-font-weight: bold;"
                   GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextArea fx:id="skillsField"
                      style="-fx-background-color: #f7fbfc; -fx-background-radius: 8;
                              -fx-padding: 8; -fx-font-weight: bold;"
                      prefRowCount="3"
                      GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Work Experience:" style="-fx-text-fill: #2a4d69; -fx-font-weight: bold;"
                   GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextArea fx:id="experienceField"
                      style="-fx-background-color: #f7fbfc; -fx-background-radius: 8;
                             -fx-padding: 8; -fx-font-weight: bold;"
                      prefRowCount="3"
                      GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="Projects:" style="-fx-text-fill: #2a4d69; -fx-font-weight: bold;"
                   GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <TextArea fx:id="projectsField"
                      style="-fx-background-color: #f7fbfc; -fx-background-radius: 8;
                             -fx-padding: 8; -fx-font-weight: bold;"
                      prefRowCount="3"
                      GridPane.rowIndex="7" GridPane.columnIndex="1"/>

            <Label fx:id="submissionMessage"
                   text=""
                   visible="false"
                   style="-fx-font-weight: bold; -fx-text-fill: green;"
                   GridPane.rowIndex="8" GridPane.columnIndex="1"/>

        </GridPane>
    </center>

    <bottom>
        <VBox alignment="CENTER" spacing="10">
            <padding><Insets top="16" right="16" bottom="16" left="16"/></padding>

            <Button text="Generate CV" onAction="#generateCV"
                    style="-fx-background-color: #4b86b4; -fx-text-fill: white;
                           -fx-padding: 10 25; -fx-font-size: 15px; -fx-font-weight: bold;
                           -fx-background-radius: 10;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 4, 0.3, 0, 1);"/>

            <Label fx:id="thankYouText"
                   text="Thank you for submission!"
                   visible="false"
                   style="-fx-text-fill: #2a4d69; -fx-font-size: 14px; -fx-font-weight: bold;"/>
        </VBox>
    </bottom>

</BorderPane>
